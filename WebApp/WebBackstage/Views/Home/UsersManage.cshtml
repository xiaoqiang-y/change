                        <table cellpadding="0" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>序号</th>
                                    <th>登录名</th>
                                    <th>密码</th>
                                    <th>邮箱</th>
                                    <th>昵称</th>
                                    <th>默认地址ID</th>
                                    <th>操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td width="5%">@item.UsersId</td>
                                        <td width="10%">@item.UserName</td>
                                        <td width="15%">@item.Pwd</td>
                                        <td width="15%">@item.Email</td>
                                        <td width="15%">@item.Nick</td>
                                        <td width="11%">@item.DeliveryId</td>
                                        <td width="20%" class="td-manage lafite_table_a_blue">
                                            <a class="lafite_margin_left_10px" title="删除" href="/Home/DeleteUsers?UsersId=@item.UsersId">
                                                删除用户
                                            </a>
                                            <a class="lafite_margin_left_10px" title="重置密码" href="#">
                                                重置密码
                                            </a>
                                            
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        
                    </div>
                </div>
               
            </div>
        </div>
