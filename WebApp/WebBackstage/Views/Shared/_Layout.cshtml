<!doctype html>
<html class="x-admin-sm">
<head>
    <meta charset="UTF-8">
    <title>CHANGE商城管理系统</title>
    <meta name="renderer" content="webkit|ie-comp|ie-stand">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width,user-scalable=yes, minimum-scale=0.4, initial-scale=0.8,target-densitydpi=low-dpi" />
    <meta http-equiv="Cache-Control" content="no-siteapp" />
    <link rel="stylesheet" href="~/css/font.css">
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/fontAlibaba/iconfont.css">
    <link rel="stylesheet" href="~/css/后台首页.css">
    <link rel="stylesheet" href="~/css/购物车.css">
    <link rel="stylesheet" href="~/css/商品详情.css">
    <link rel="stylesheet" href="~/css/user.css">

    <script src="~/js/jquery.min.js"></script>
    <script src="~/lib/layui/layui.js" charset="utf-8"></script>
    <script type="text/javascript" src="~/js/xadmin.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/frontend-plugin.js"></script>

    <!-- 富文本框 -->
    <script src="~/ueditor/ueditor.config.js"></script>
    <script src="~/ueditor/ueditor.all.min.js"></script>
    <script src="~/ueditor/lang/zh-cn/zh-cn.js"></script>
    <script src="~/ueditor/ueditor.parse.js"></script>

</head>
<body class="index">
    <!-- 顶部开始 -->
    <!-- 顶部开始 -->
    <div class="container">
        <div class="logo">
            CHANGE商城管理系统
        </div>
        <div class="left_open">
            <a><i title="展开左侧栏" class="iconfont">&#xe699;</i></a>
        </div>

        <ul class="layui-nav right" lay-filter="">
            @if (@ViewBag.LoginName != null)
            {
                <li class="layui-nav-item">
                    <a href="javascript:;">
                        <div class="lafitewu_circle">
                            <i class="iconfont">&#xe6ff;</i>
                        </div>
                        欢迎您，@ViewBag.LoginName &nbsp;管理员
                    </a>
                </li>
            }

            <li class="layui-nav-item lafitewu_exit to-index">
                <a href="/Home/Index?Exit=EXIT"><i class="iconfont">&#xe704;</i>退出</a>
            </li>
        </ul>
    </div>
    <div class="left-nav">
        <div id="side-nav">
            <ul id="nav">
                <li>
                    <a asp-controller="Home" asp-action="Index">
                        <i class="iconfont left-nav-li">&#xe6fc;</i>
                        后台主页
                        <i class="iconfont nav_right">&#xe697;</i>
                    </a>
                </li>
                <li>
                    <a asp-controller="Home" asp-action="NewsManage">
                        <i class="iconfont left-nav-li">&#xe706;</i>
                        促销资讯
                        <i class="iconfont nav_right">&#xe697;</i>
                    </a>
                    
                </li>
                @*<li>
                    <a href="javascript:;">
                        <i class="icon iconfont left-nav-li">&#xe6b5;</i>
                        商品类型
                        <i class="iconfont nav_right">&#xe697;</i>
                    </a>                   
                </li>*@
                <li>
                    <a asp-controller="Home" asp-action="GoodsManage">
                        <i class="icon iconfont left-nav-li">&#xe6cb;</i>
                        上架商品
                        <i class="iconfont nav_right">&#xe697;</i>
                    </a>
                </li>
                <li>
                    <a asp-controller="Home" asp-action="OrderManage">
                        <i class="icon iconfont left-nav-li">&#xe6bf;</i>
                        订单管理
                        <i class="iconfont nav_right">&#xe697;</i>
                    </a>

                </li>
                <li>
                    <a asp-controller="Home" asp-action="UsersManage">
                        <i class="iconfont left-nav-li" lay-tips="用户管理">&#xe702;</i>
                        用户管理
                        <i class="iconfont nav_right">&#xe697;</i>
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <div class="page-content">
        <div class="layui-tab tab" lay-filter="xbs_tab" lay-allowclose="false">
            <ul class="layui-tab-title">
                <li class="home">
                    <a href="javascript:;">
                        @ViewData["Title"]
                    </a>
                </li>
            </ul>

        </div>
        <div class="layui-tab-content">
            <div class="layui-tab-item layui-show">
                @*<main role="main" class="pb-3">*@
                    @RenderBody()
                @*</main>*@
            </div>
        </div>
    </div>


    <div class="lafitewu_footer">
        <div class="lafitewu_footer_con">
            <div class="lafite_f_con_left">
                <div class="lafite_font1">Change商城后台管理</div>
                <div class="lafite_font2">版权所有 湖南工程职业技术学院<span>www.change.com</span></div>
            </div>

            <div class="lafite_f_con_right">联系我们: <span>Services@change.com</span></div>
        </div>
    </div>
    <style id="theme_style"></style>
    <!-- 右侧主体结束 -->
    <!-- 中部结束 -->
    @RenderSection("Scripts", required: false)
</body>

</html>
